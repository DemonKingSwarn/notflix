#!/usr/bin/env sh

#########
# Input #
#########

input() {
	printf "Search Torrent: " ; read -r name
	get_url
}

##################
# URL Processing #
##################

get_url() {
	search=$(echo "${name}" | sed 's/ /\%20/g')
	curl -s "$baseurl/search/${search}" > "$HOME/.cache/url.html"
	magnet=$(cat "$HOME/.cache/url.html" | grep -E 'magnet\:\?' | sed 's/href\=/ /g' | awk '{print $2}' | sed 's/"/ /g' | head -n 1 | sed 's/ //g' )
	play
}


########
# Play #
########

play() {
	peerflix -l -k ${magnet}
}

###########
# Startup #
###########

baseurl="https://thepiratebay.party"
name=$(echo "$*" | sed 's/ /\%20/g')

# checks if name variable is empty or not

if [ ! -z "$name" ] ; then
	get_url
fi

if [ -z "$name" ] ; then 
	input
fi

